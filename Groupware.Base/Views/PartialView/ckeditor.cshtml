@Scripts.Render("~/Content/ckeditor/ckeditor.js")

<script type="text/javascript">

	var syncContent = function () {
		$('#content').val(CKEDITOR.instances.contents.getData());
	}
</script>

<textarea id="content" name="content" style="display:none;"></textarea>
<textarea id="contents" name="contents" >@ViewBag.contents</textarea>


<script type="text/javascript">
